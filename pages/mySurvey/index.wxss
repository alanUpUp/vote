.mine-container{
    padding: 30rpx;
	margin-bottom:60rpx;
}
/*= wizard css =*/

.payment-wizard {
	/*float: left;*/
	width: 100%;
}

.payment-wizard .li.active {
	position: relative;
	z-index: 1;
}

.wizard-heading {
	/*float: left;*/
	display: flex;
	justify-content: space-between;
	align-items: center;
	width: 100%;
	padding: 30rpx 20rpx;
	/*background-color: #fafafa;*/
	/*margin-bottom: 1px;*/
	border-bottom: 1px #fafafa solid;
	box-sizing: border-box;
	font-size: 32rpx;
	color: #000;
	/*text-transform: uppercase;*/
	transition: 0.3s;
}

.wizard-content {
	display: flex;
	background-color: #fff;
	box-shadow: 0 16rpx 16rpx #d2d2d2;
	/*padding: 30rpx;*/
	box-sizing: border-box;
	text-align: center;
	justify-content: space-around;
	height: 0px;
	overflow: hidden;
	transition: 0.3s;
}
.li.active .wizard-content{
	height: 146rpx;
}


.li.active .wizard-heading {
	/*color: #447294;*/
	position: relative;
	padding: 16rpx 20rpx 16rpx 54rpx;
	cursor: pointer;
	transition: 0.3s;
	background-color: rgba(95, 25, 113, 0.28);
	color: #fff;
	margin-bottom: 0;
}
.li.active .wizard-heading:before {
	content: "âœ“";
	color: #fff;
	text-align: center;
	font-size: 24rpx;
	font-weight: bold;
	position: absolute;
	left: -14rpx;
	top: 50%;
	transform: translate(0,-50%);
	width: 54rpx;
	padding: 12rpx 0;
	background-color: #5f1971;
	z-index: 99;
}

.li.active .wizard-heading:after {
	content: "";
	position: absolute;
	bottom: -2rpx;
	left: -14rpx;
	border-left: 14rpx solid transparent;
	border-top: 10rpx solid #4a095a;
}
.wizard-gird{
	flex: 1;
	padding: 20rpx;
}
.wizard-gird:active{
	background-color: #ddd;
}
.wizard-gird > image{
	width: 64rpx
}
.wizard-gird > view{
	font-size: 28rpx;
}
/*= wizard end =*/

