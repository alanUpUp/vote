/* pages/main/index.wxss */
.page{background-color: #fff}
.select-list{
  font-size:30rpx;
  box-sizing: border-box;
  background-color: #e5e9f2;
  margin-top: 4rpx;
  /* margin-bottom:20rpx; */
  /* display: flex; */
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 12rpx;
  display: none;
}
.select-list.on{
  display: flex;
}
.widget-post{
  background-color: #fff;
  box-shadow: 1px 1px 1px #cccccc;
  margin-bottom: 20rpx;
  width:356rpx;
}  
.panel-header{
  position: relative
}
.top-item{
  background-color:rgba(237, 85, 101, 0.8);
  padding:6rpx 10rpx;
  position:absolute;
  top:10rpx;
  right:10rpx;
  z-index:12;
  color:#fff;
  font-size:20rpx;
  border-radius:10rpx;

}
.header-img{
  position: relative;
  width: 100%;
  background-color: #333;
  height: 160px;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center
}
.panel-header image{
  width: 100%;
  background-color: #ddd;
  height: 160px;
  vertical-align: middle
}
.panel-content{
  box-sizing: border-box;
  font-size:28rpx;
  padding: 12rpx;
  color: #fff;
  position: absolute;
  bottom: 0;
  z-index: 10;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.4)
}

.text-md{
  font-weight: 600;
  font-size:24rpx;
  /* overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; */
  line-height: 30rpx;
  width: 100%;
}
.text-sum{
   font-size: 24rpx;
   line-height: 30rpx;
   padding-left: 0rpx;
   color:#ccc;
   overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}
.panel-footer{
      background-color: #f5f5f5;
      padding: 20rpx 12rpx;
       display: flex; 
      align-content: center;
      justify-content: space-between; 
      color: #666;
      position: relative
}
.pull-left{
  display: flex;
  align-items: center;
}
.pull-left image{
  width: 36rpx;
  /* vertical-align: middle; */
  margin-right: 8rpx;
  
}
.pull-right{
  display: flex;
  align-items: center;
  /* justify-content: flex-end;  */
  width: 60%;
}
.pull-right  text{
  white-space: pre-wrap; 
  font-size: 20rpx;
}
.pull-right image{
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  margin-right: 8rpx;
  border-radius: 100%;
  border: 2px solid rgba(221, 221, 221, 0.81);
  box-sizing: border-box;
  
}
.name-box{
  display: flex;
  background-color: #fff;
  position: relative;
  width:100%;
  z-index: 15
}
.name-box.fixed{
  position: fixed;
  top: 0;
  left: 0;
  transform: all 300ms;
}
.type-name{
  text-align: center;
  font-size: 30rpx;
  position: relative;
  height: 88rpx;
  line-height: 88rpx;
  font-weight: 600;
  width: 50%;
  transition: color 300ms;
  
  /*border-top: 1px solid #ddd*/
}
.type-name:active{
  background-color: #ddd
}
.realBorder {
    display: block;
    width: 50%;
    height: 2px;
    position: absolute;
    left: 0;
    bottom: 0;
    background-color: #5f1971;
    transition: left 300ms ease;
}
.realBorder.new{
  left: 0%
}
.realBorder.hot{
  left: 50%
}
.type-name.on{
  /* border-bottom: 2px solid #5f1971; */
  color:#5f1971;
}
.type-name.new{
  background-color: #2dcc70
}
.type-name.hot{
  background-color: #ef5f5f
}
.type-name .more{
  position: absolute;
  text-align: right;
  right: 20rpx;
  top: 50%;
  transform: translate(0,-50%);
  font-size: 24rpx;
  font-weight: 500;
  color: #f1f1f1
}
.swiper-item{
  position: relative
}
.slide-image{
  width: 100%;
  height: 150px;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center
}
.slide-title{
  font-size:28rpx;
  padding: 12rpx;
  color: #fff;
  position: absolute;
  bottom: 0;
  z-index: 10;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  /* overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; */
  font-weight: 600;
  box-sizing: border-box;
}