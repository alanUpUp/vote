/**app.wxss**/
.page {
  opacity: 0;
  transition: opacity 2s;
}
.pageShow{
  opacity:1;
}
button.submit-btn{
  width: 670rpx;
  margin: 40rpx auto;
  color: #fff;
  background-color: #5f1971;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 40rpx;
}
button[loading][type="default"] {
  color:#fff;
  background-color:#666;
}
.error-tips{
  background-color: rgba(230, 67, 64, 0.86);
  color: #fff;
  position: fixed;
  z-index: 999;
  top: -50rpx;
  left: 0;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  text-align: center;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  transition: 0.5s;
  opacity: 0
}
.error-tips.active{
  opacity: 1;
  top: 0
}